<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/cityHour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12:00" />

    <ImageView
        android:id="@+id/cityWeatherIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/sun"
        app:layout_constraintTop_toBottomOf="@+id/cityHour"
        app:layout_constraintStart_toStartOf="@+id/cityHour"
        app:layout_constraintEnd_toEndOf="@+id/cityHour"/>

    <TextView
        android:id="@+id/cityWeatherTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/cityWeatherIcon"
        app:layout_constraintStart_toStartOf="@+id/cityWeatherIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cityWeatherIcon"
        tools:text="33Â°"/>

</androidx.constraintlayout.widget.ConstraintLayout>