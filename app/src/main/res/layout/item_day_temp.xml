<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/cityDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/light_gray"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Tue" />

    <ImageView
        android:id="@+id/cityWeatherIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/sun_gray"
        app:layout_constraintTop_toTopOf="@+id/cityDay"
        app:layout_constraintBottom_toBottomOf="@+id/cityDay"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/cityMaxTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:textColor="@color/light_gray"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/cityWeatherIcon"
        app:layout_constraintStart_toEndOf="@+id/cityWeatherIcon"
        app:layout_constraintBottom_toBottomOf="@+id/cityWeatherIcon"
        tools:text="33°" />

    <ImageView
        android:id="@+id/cityMaxTempIcon"
        android:layout_width="15dp"
        android:layout_height="14dp"
        android:layout_marginStart="5dp"
        android:rotation="270"
        app:srcCompat="@drawable/play"
        app:layout_constraintTop_toTopOf="@+id/cityMaxTem"
        app:layout_constraintStart_toEndOf="@+id/cityMaxTem"
        app:layout_constraintBottom_toBottomOf="@+id/cityMaxTem" />

    <TextView
        android:id="@+id/cityMinTem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textColor="@color/light_gray"
        android:textStyle="bold"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/cityMaxTempIcon"
        app:layout_constraintStart_toEndOf="@+id/cityMaxTempIcon"
        app:layout_constraintBottom_toBottomOf="@+id/cityMaxTempIcon"
        tools:text="33°" />

    <ImageView
        android:id="@+id/cityMinTempIcon"
        android:layout_width="15dp"
        android:layout_height="14dp"
        android:layout_marginStart="5dp"
        android:rotation="90"
        app:srcCompat="@drawable/play"
        app:layout_constraintTop_toTopOf="@+id/cityMinTem"
        app:layout_constraintStart_toEndOf="@+id/cityMinTem"
        app:layout_constraintBottom_toBottomOf="@+id/cityMinTem" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="80dp" />

</androidx.constraintlayout.widget.ConstraintLayout>